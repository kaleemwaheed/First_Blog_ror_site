<!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header header2">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1><h1><%= @post.title %></h1>
                        
                        <span class="meta"><%= link_to "EDIT HERE POST",edit_post_path(@post) %>
<%= link_to "DELETE", post_path(@post), method: :delete,data: {confirm: "ARE YOU SURE"} %><br></span>
                    </div>
                </div>
            </div>
        </div>
    </header>

<article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
				
				<%= @post.body %></h1>
				<% if @post.comments.count > 0 %>

					<hr>
						<h1>ALL  Comments</h1>
					</hr>
					<%=  render @post.comments.order("created_at DESC") %>

				<% end%>
				
			    </div>
       		 </div>
       </div>
       </article>


<div class="laghtbg">
	<!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <h2>Leave Comment Here</h2>
                <%= form_for [@post, @post.comments.build] do |f|  %>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <%= f.text_field :name , class:"form-control", placeholder:"Name"  %>
                        </div>
                    </div>
                    <div class="row control-group">
                    <%= f.text_area :body, class:"form-control", placeholder:"Comment" %><br>
                    </div>
                    <br>
                    <div id="success"></div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                        <%= f.submit  class:"btn btn-default" %>
                        </div>
                    </div>
                <% end %>

            </div>
        </div>
    </div>

    <hr>
    </div>


<h3><%= link_to "Back" ,posts_path %></h3>
