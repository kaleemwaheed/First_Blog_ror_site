

<div>
				<%= form_for @post do |f| %>

					<div>
						<% if @post.errors.any? %>
							<ul><% @post.errors.full_messages.each do |message |%></ul>
								<li><%= message %>
								</li>
								<%end%>
						<%end%>
						</div>
                    <div class="row control-group">
                    
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <%= f.text_field :title, class:"form-control" , placeholder:"Name" %><br>
                         
                        </div>
                    </div>
                 
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            	<%= f.text_area :body,class:"form-control" ,placeholder:"Message" %><br>
                        </div>
                    </div>
                    <br>
                    <div id="success"></div>
                    	<div class="row">
                       	 <div class="form-group col-xs-12">
                            <%= f.submit class:"btn btn-default"%>
                         </div>
                		</div>
                    <% end %>
</div>